<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="BaseAppTheme"/>
    <style name="DayTheme" parent="BaseDayTheme"/>
    <style name="NightTheme" parent="BaseNightTheme"/>



    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:startColor">@android:color/transparent</item>

        <item name="colorBackground">@android:color/white</item>
        <item name="colorTextView">@android:color/black</item>
        <item name="colorCardBackground">@android:color/white</item>
        <item name="colorCdlBackBackground">@color/md_grey_200</item>
    </style>


    <!--白天主题，此处直接和AppTheme一样-->
    <style name="BaseDayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:startColor">@android:color/transparent</item>

        <item name="colorBackground">@android:color/white</item>
        <item name="colorTextView">@android:color/black</item>
        <item name="colorCardBackground">@android:color/white</item>
        <item name="colorCdlBackBackground">@color/md_grey_200</item>
    </style>

    <!--夜间主题-->
    <style name="BaseNightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/md_blue_grey_800</item>
        <item name="colorPrimaryDark">@color/md_blue_grey_900</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:startColor">@android:color/transparent</item>

        <item name="colorBackground">@color/md_blue_grey_700</item>
        <item name="colorTextView">@color/md_blue_grey_100</item>
        <item name="colorCardBackground">@color/md_blue_grey_700</item>
        <item name="colorCdlBackBackground">@color/md_blue_grey_900</item>
    </style>



</resources>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/zhihu_item_rl0"
    android:background="?attr/colorCdlBackBackground"
    >
<android.support.v7.widget.CardView
    android:orientation="vertical"
    android:id="@+id/zhihu_item_cardview"
    app:cardCornerRadius="3dp"
    android:tag="cardView"
    app:cardUseCompatPadding="true"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    app:cardBackgroundColor="?attr/colorCardBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/zhihu_item_rl1"
        android:background="?attr/colorBackground"
        android:foreground="?android:attr/selectableItemBackground"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:background="?attr/colorBackground"
        android:padding="5dp"
        android:id="@+id/zhihu_title"
        android:textSize="@dimen/listTextSize"
        android:textColor="?attr/colorTextView"
        android:lines="3"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@+id/zhihu_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/zhihu_img"
        android:layout_alignParentEnd="true"
        android:layout_width="80dp"
        android:layout_height="80dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
</RelativeLayout>